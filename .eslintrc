{
	"extends": "@antfu",
	"rules": {
		"indent": ["error", "tab"],
		"@typescript-eslint/indent": ["error", "tab"],
		"jsonc/indent": ["error", "tab"],
		"no-tabs": "off",
		"no-console": "off",
		"curly": ["error", "all"],
		"brace-style": ["error", "1tbs"],
		"@typescript-eslint/brace-style": ["error", "1tbs"],
		"vue/html-indent": [
			"error",
			"tab",
			{
				"attribute": 1,
				"baseIndent": 1,
				"closeBracket": 0
			}
		],
		"vue/html-self-closing": [
			"error",
			{
				"html": {
					"normal": "never",
					"void": "always",
					"component": "any"
				}
			}
		],
		"vue/max-attributes-per-line": [
			"error",
			{
				"singleline": {
					"max": 1
				},
				"multiline": {
					"max": 1
				}
			}
		]
	}
}
